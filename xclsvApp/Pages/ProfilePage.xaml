<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xclsvApp.ProfilePage"
             xmlns:vm="clr-namespace:xclsvApp.ViewModel"
             Title="Profil"
             BackgroundColor= "White"
             >
    <ContentPage.BindingContext>
        <vm:LoginViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" MaximumWidthRequest="300">
        <Image Source="placeholder.png" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="150" HeightRequest="150"/>
        <Label Text="{Binding Email}" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" Margin="30"/>
    </VerticalStackLayout>
</ContentPage>